@{
    ViewData["Title"] = "Register";
}

@model OdevDagitim.ViewModel.RegisterModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title text-center mb-4">Hesap Oluştur</h4>
                <form method="post" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                        <input asp-for="Username" class="form-control form-control-lg" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-Posta</label>
                        <input asp-for="Email" class="form-control form-control-lg" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Parola</label>
                        <input asp-for="Password" class="form-control form-control-lg" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label  class="form-label">Parola Tekrar</label>
                        <input  class="form-control form-control-lg" type="password" />
                        <span  class="text-danger"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">Kayıt Ol</button>
                    </div>

                    <div class="mb-3 text-center">
                        <span>Hesabınız var mı? <a asp-action="Login" class="text-primary">Giriş Yap</a></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
