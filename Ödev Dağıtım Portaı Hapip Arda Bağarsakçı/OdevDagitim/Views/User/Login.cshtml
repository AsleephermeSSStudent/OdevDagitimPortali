@{
    ViewData["Title"] = "Login";
}

@model OdevDagitim.ViewModel.LoginModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title text-center mb-4">Giriş Yap</h4>
                <form method="post" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                        <input asp-for="UserName" class="form-control form-control-lg" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Parola</label>
                        <input asp-for="Password" class="form-control form-control-lg" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                    </div>

                    <div class="mb-3 text-center">
                        <span>Yeni hesabınız yok mu? <a asp-action="Register" class="text-primary">Kayıt Ol</a></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
