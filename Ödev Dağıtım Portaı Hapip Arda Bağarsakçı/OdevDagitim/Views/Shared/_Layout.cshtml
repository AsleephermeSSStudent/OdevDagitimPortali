<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OdevDagitim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OdevDagitim.styles.css" asp-append-version="true" />
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf/notyf.min.css">
    <script src="https://cdn.jsdelivr.net/npm/notyf/notyf.min.js"></script>

    <!-- jQuery CDN -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OdevDagitim</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
        @if (User.Identity.IsAuthenticated)  
                        {
                            if (User.IsInRole("Ogrenci"))  
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="User" asp-action="Logout">Çıkış Yap</a>
                                </li>
                            }
                            if (User.IsInRole("admin"))
                            {

                                <script>
                                    @if (User.IsInRole("admin"))
                                    {
                                        <text>
                                            setTimeout(function () {
                                                window.location.href = '/Admin/Index';  // Admin sayfasına yönlendir
                                            });  // 100 ms bekle, sonra yönlendir
                                        </text>
                                    }
                                </script>
                            }
                            if (User.IsInRole("Teacher"))
                            {
                                <script>
                                    @if (User.IsInRole("Teacher"))
                                    {
                                        <text>
                                            setTimeout(function () {
                                                window.location.href = '/Admin/Index';  // Admin sayfasına yönlendir
                                            });  // 100 ms bekle, sonra yönlendir
                                        </text>
                                    }
                                </script>
                            }
                            
                        }
                        else
                        {
                            <!-- Giriş Yapmamış Kullanıcı için Kayıt Ol Linki -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Giriş Yap </a>
                            </li>
                        }
                       
                      

                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - OdevDagitim - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  

    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")

  
        
        <script>
            var connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .build();

            // Okunmamış mesaj sayısını güncelle
            function updateUnreadMessageCount() {
                $.get('/Message/GetUnreadCount', function(count) {
                    var badge = $('#unreadMessageCount');
                    if (count > 0) {
                        badge.text(count).show();
                    } else {
                        badge.hide();
                    }
                });
            }

            // Yeni mesaj geldiğinde sayıyı güncelle
            connection.on("ReceiveMessage", function (senderId, message) {
                updateUnreadMessageCount();
            });

            // Sayfa yüklendiğinde sayıyı güncelle
            $(document).ready(function() {
                updateUnreadMessageCount();
            });

            connection.start().catch(function (err) {
                console.error(err);
            });
        </script>

</body>
</html>
